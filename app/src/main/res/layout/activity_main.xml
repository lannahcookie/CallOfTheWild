<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/homescreen">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FARM ANIMALS"
        android:id="@+id/farmbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUNGLE ANIMALS"
        android:id="@+id/junglebutton"
        android:layout_below="@+id/farmbutton"
        android:layout_alignLeft="@+id/farmbutton"
        android:layout_alignStart="@+id/farmbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESERT ANIMALS"
        android:id="@+id/desertbutton"
        android:layout_below="@+id/junglebutton"
        android:layout_alignLeft="@+id/junglebutton"
        android:layout_alignStart="@+id/junglebutton" />
</RelativeLayout>
